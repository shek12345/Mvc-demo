@{
}
<p>

    @Html.ActionLink("Add New", "Create", "Course")

</p>

<table class="table table-bordered">

    <tr>

        <th>Id</th>

        <th>Name</th>

        <th>Fees</th>

        <th>Action</th>

    </tr>

    @foreach(Mvcproject.Models.Course cour in ViewBag.CourseList)

    {

        <tr>

            <td>@cour.Id</td>

            <td>@cour.Name</td>

            <td>@cour.Fees</td>

            <td>

                @Html.ActionLink("Edit", "Edit", new { @id = cour.Id }) |

                @Html.ActionLink("Delete", "Delete", new { @id = cour.Id })

            </td>

        </tr>

    }
</table>